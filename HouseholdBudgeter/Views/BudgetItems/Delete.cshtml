@model HouseholdBudgeter.Models.BudgetItem

@{
    ViewBag.Title = "Delete";
}

<div class="panel panel-default">
    <div class="panel-heading"><h2><i class="fa fa-gear"></i> Delete Budget Item</h2></div>
    <div class="panel-body">
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Budget)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Budget.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Category.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Amount)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Amount)
                </dd>
            </dl>
            @using (Html.BeginForm("Delete", "BudgetItems"))
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a href="@Url.Action("Index")" class="btn btn-primary"> << Back to List</a>
                </div>
            }
        </div>
    </div>
</div>



