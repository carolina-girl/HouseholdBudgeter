@model HouseholdBudgeter.Models.Transaction

@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-cc-paypal"></i> Create New Transaction
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
        
                                @using (Html.BeginForm("Create", "Transactions"))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-horizontal">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.BankAccountsId, "Bank Account", htmlAttributes: new { @class = "control-label col-sm-2" })
                                            <div class="col-sm-10">
                                                @Html.DropDownList("BankAccountsId", null, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.BankAccountsId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-sm-2" })
                                            <div class="col-sm-10">
                                                @Html.TextBoxFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        @*<div class="form-group">
                                            <div class="col-sm-2 col-sm-offset-4 text-center">
                                                @Html.RadioButton("Types", false) <text class="text-danger"><b>Withdraw</b></text>
                                            </div>
                                            <div class="col-sm-2 text-center">
                                                @Html.RadioButton("Types", true) <text class="text-success"><b>Deposit</b></text>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.Types, "", new { @class = "text-danger" })
                                        </div>*@

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-sm-10">
                                                <div class="btn-group" data-toggle="buttons">
                                                    <label class="btn btn-primary active">
                                                        @Html.RadioButton("Types", "Withdraw", true, new { id = "IsWithdrawal" }) Withdraw
                                                    </label>
                                                    <label class="btn btn-primary">
                                                        @Html.RadioButton("Types", "Deposit", new { id = "IsDeposit" }) Deposit
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-sm-2" })
                                            <div class="col-sm-10">
                                                <div class="input-group">
                                                    <span class="input-group-addon">$</span>
                                                    @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter the amount you wish to save/spend." } })
                                                </div>
                                                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.CategoryId, "Category", htmlAttributes: new { @class = "control-label col-sm-2" })
                                            <div class="col-sm-10">
                                                @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-offset-2 col-sm-6">
                                                <input type="submit" value="Create" class="btn btn-primary" />
                                            </div>
                                        </div>
                                    </div>
                                }
     
                        </table>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

