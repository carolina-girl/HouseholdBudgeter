@model IEnumerable<HouseholdBudgeter.Models.Budget>
@{
    ViewBag.Title = "Index";
}

<h2><i class="fa fa-archive"></i> Budget </h2>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <a data-toggle="modal" href="#create" class="btn btn-default pull-right">Add A New Element</a>
                                    <table class="table" id="budgetsTable">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Name)
                                                </th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Name)
                                                    </td>
                                                    <td>
                                                        <a href="@Url.Action("Edit", new { id = item.Id })"><i class="fa fa-pencil btn btn-xs btn-warning"></i></a>
                                                        <span class="delete-section">
                                                            <a class="delete-link" href="@Url.Action("Delete", new {id = item.Id})"><i class="fa fa-close btn btn-xs btn-danger"></i></a>
                                                            <span class="btn btn-danger btn-xs delete-confirm" style="display:none" data-delete-id="@item.Id">Confirm Delete</span>
                                                        </span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                        </table>
                                    </table>
                                </div>
                            </div>
                </div>
            </div>
        </div>
    </div>



