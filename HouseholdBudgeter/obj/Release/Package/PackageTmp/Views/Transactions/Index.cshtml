@model IEnumerable<HouseholdBudgeter.Models.Transaction>

@{
    ViewBag.Title = "Index";
}

                <h3 class="page-header">Account Transactions</h3>
                <p>
                    @Html.ActionLink("Create New Transaction", "AddTransaction") |
                    @Html.ActionLink("Household Budget", "Index", "Budgets") |
                    @Html.ActionLink("Accounts", "Index", "BankAccounts")
                </p>
                <table class="table">
                    <tr>
                        <th>
                                @Html.DisplayNameFor(model => model.User.FullName)
                            </th>

                        <th>
                            @Html.DisplayNameFor(model => model.CategoryId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AccountId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ReconcileDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ReconcileAmount)
                        </th>
                        @*<th>
                            @Html.DisplayNameFor(model => model.IsExpense)
                        </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.IsReconciled)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                    @Html.DisplayFor(modelItem => item.User.FullName)
                                </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccountId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReconcileDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReconcileAmount)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.IsExpense)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.IsReconciled)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Void", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>



