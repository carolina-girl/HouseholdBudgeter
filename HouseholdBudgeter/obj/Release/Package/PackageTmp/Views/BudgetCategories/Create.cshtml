@model HouseholdBudgeter.Models.BudgetCategory

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="AccountId" id="AccountId" value="@ViewBag.AccountId" />
    <input type="hidden" name="Transactions" id="Transactions" value="@ViewBag.Transactions" />
    <input type="hidden" name="BudgetItems" id="BudgetItems" value="@ViewBag.BudgetItems" />
