@model IEnumerable<HouseholdBudgeter.Models.BankAccount>
@{
    ViewBag.Title = "Index";
}

<!-- Page Content -->

                <h3 class="page-header">Bank Accounts</h3>
                    @using (Html.BeginForm("Create", "BankAccount"))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @*<div class="col-md-6">
                                    <input type="text" placeholder="BankAccount Name" name="BankAccountName" class="form-control" />
                                </div>*@
                            </div>
                        </div>
                    }
                <p>
                    @Html.ActionLink("New Account", "Create")
                </p>
               
                <table class="table">
                   
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.HouseholdId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ReconcileAmount)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.HouseholdId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReconcileAmount)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                                @Html.ActionLink("Transactions", "Index", "Transactions", new { id = item.Id }, null)

                            </td>
                        </tr>
                    }
                </table>












