@model IEnumerable<HouseholdBudgeter.Models.BudgetItem>

@{
    ViewBag.Title = "Index";
}

                <p>
                    @Html.ActionLink("Add New Budget Items", "Create")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Budget.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BudgetCategory.Category)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Frequency)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Budget.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BudgetCategory.Category)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Frequency)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "BudgetItems", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", "BudgetItems", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", "BudgetItems", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>
